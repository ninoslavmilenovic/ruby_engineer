<hr class="le-hr">

<section id="blog" >
  <div class="sticky-paper-head has-shadow">
    <div class="content">
      <h1>Blog</h1>
    </div>
  </div>

  <div class="sticky-paper-body has-shadow">
    <div class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="blog-list-holder row">
            <% @posts.each do |post| %>
              <div class="blog-item item col-xs-12 col-md-6 col-lg-4">
                
                <div class="thumb has-shadow">
                  <div class="date">
                    <%= format_date(post.created_at) %>
                  </div> 
                  <%= image_tag(post.image.url(:thumb)) %>
                </div>
                <div class="info-area">

                  <div class="title">
                    <%= post.title %>
                  </div>
                  <div class="excerpt">
                    <p>
                      <%= post.description %>
                    </p>
                  </div>

                  <%= link_to 'Read more', post_path(post), class: 'le-btn' %>
                </div>

              </div>
            <% end unless @posts.empty? %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
